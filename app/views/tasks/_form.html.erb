<div class="row">
  <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-3">
    <%= form_for(task) do |f| %>

      <% if task.errors.any? %>
        <div id="alert alert-warning"">
          <ul>
            <% task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>      
      
      <div class="form-group">
        <%= f.label :status, 'ステータス' %><br>
        <%= f.select :status, [["未着手", "未着手"], ["対応中", "対応中"], ["完了", "完了"], ["保留", "保留"], ["中止", "中止"]], class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      
      <%= f.submit '登録', class: 'btn btn-primary'  %>
    <% end %>
  </div>
</div>